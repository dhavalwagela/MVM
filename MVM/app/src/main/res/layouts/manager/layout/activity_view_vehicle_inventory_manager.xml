<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="190dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewVehicleInventory">

        <TableLayout
            android:layout_width="409dp"
            android:layout_height="346dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/table_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleLabel">

            <TableRow
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_span="1"
                    android:padding="5dp"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:padding="5dp"
                    android:text="Remaining Quantity"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    tools:ignore="RtlCompat" />


            </TableRow>

            <TableRow
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_span="1"
                    android:padding="5dp"
                    android:text="Drinks"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/drinksQuantity"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:padding="5dp"
                    android:text="10"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    tools:ignore="RtlCompat" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:padding="5dp"
                    android:text="Sandwiches"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/sandwitchQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:padding="5dp"
                    android:text="24"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    tools:ignore="RtlCompat" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:padding="5dp"
                    android:text="Snacks"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/snacksQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:padding="5dp"
                    android:text="12"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    tools:ignore="RtlCompat" />


            </TableRow>

            <TableRow
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_span="1"
                    android:padding="5dp"

                    android:textSize="16dp" />

                <TextView

                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:padding="5dp"

                    android:textAlignment="center"
                    android:textSize="16dp"
                    tools:ignore="RtlCompat" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">


                <TextView
                    android:id="@+id/durationLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:padding="5dp"
                    android:text="Time slot"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:padding="5dp"
                    android:text="3"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    tools:ignore="RtlCompat" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/locationLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:padding="5dp"
                    android:text="Location Intersection"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/location_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:padding="5dp"
                    android:text="Cooper and UTA Blvd"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    tools:ignore="RtlCompat" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:padding="5dp"
                    android:text="Total Revenue"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/revenue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:padding="5dp"
                    android:text="$"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    tools:ignore="RtlCompat" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:padding="5dp"
                    android:text="Operator Name"
                    android:id="@+id/operatorText"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/operator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:padding="5dp"
                    android:text="David"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    tools:ignore="RtlCompat" />

            </TableRow>
        </TableLayout>


        <TextView
            android:id="@+id/titleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Vehicle Inventory"
            android:textAllCaps="true"
            android:textColor="#009688"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:fontFamily="sans-serif-condensed-medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>