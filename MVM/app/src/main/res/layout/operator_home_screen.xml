<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OperatorHomeScreen">

    <Button
            android:id="@+id/viewVehicleInventory"
            android:layout_width="250dp"
            android:layout_height="57dp"
            android:layout_marginTop="28dp"
            android:onClick="viewVehicleInventory"
            android:text="View Vehicle Inventory"
            android:textColor="#000105"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/operator_view_schedule" />

    <TextView
            android:id="@+id/operator_welcome_msg"
            android:layout_width="290dp"
            android:layout_height="57dp"
            android:layout_marginTop="30dp"
            android:text="  Welcome Operator"
            android:textColor="#00574B"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/operator_view_current_orders"
            android:layout_width="250dp"
            android:layout_height="57dp"
            android:layout_marginTop="30dp"
            android:text="View Current Orders"
            android:textColor="#000105"
            android:textSize="18sp"
            android:onClick="viewCurrentOrders"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/operator_welcome_msg" />

    <Button
            android:id="@+id/operator_view_schedule"
            android:layout_width="250dp"
            android:layout_height="57dp"
            android:layout_marginTop="30dp"
            android:text="View Schedule"
            android:textColor="#000105"
            android:textSize="18sp"
            android:onClick="viewSchedule"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/operator_view_current_orders" />

    <Button
            android:id="@+id/operator_view_profile"
            android:layout_width="250dp"
            android:layout_height="57dp"
            android:layout_marginTop="116dp"
            android:onClick="viewProfile"
            android:text="View Profile"
            android:textColor="#000105"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/operator_view_schedule" />

    <Button
            android:id="@+id/contact_us"
            android:layout_width="250dp"
            android:layout_height="57dp"
            android:layout_marginTop="36dp"
            android:onClick="contactUs"
            android:text="Contact Us"
            android:textColor="#000105"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/operator_view_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>