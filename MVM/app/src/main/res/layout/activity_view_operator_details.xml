<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VehicleOperatorDetailsActivity">

    <TextView
            android:id="@+id/view_oprtr_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Operator Details"
            android:textColor="#009688"
            android:textSize="22sp"
            android:typeface="serif"
            android:textAllCaps="true"
            app:fontFamily="sans-serif-condensed-medium"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/id_oprtr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:text="Operator ID :"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_oprtr_details"
            android:layout_marginLeft="10dp" />

    <TextView
            android:id="@+id/oprtr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:text="First Name :"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_oprtr"
            android:layout_marginLeft="10dp" />

    <TextView
            android:id="@+id/oprtr_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:text="Last Name :"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oprtr_name"
            android:layout_marginLeft="10dp" />

    <TextView
            android:id="@+id/oprtr_ph_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:text="Phone Number :"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oprtr_last_name"
            android:layout_marginLeft="10dp" />

    <TextView
            android:id="@+id/oprtr_email_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:text="Email ID :"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oprtr_ph_no"
            android:layout_marginLeft="10dp" />

    <TextView
            android:id="@+id/oprtr_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:text="Address :"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oprtr_email_id"
            android:layout_marginLeft="10dp" />

    <TextView
            android:id="@+id/oprtr_id"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="andyoliver"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.393"
            app:layout_constraintStart_toEndOf="@+id/id_oprtr"
            app:layout_constraintTop_toBottomOf="@+id/view_oprtr_details" />

    <TextView
            android:id="@+id/first_name_oprtr"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Andy"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toEndOf="@+id/oprtr_name"
            app:layout_constraintTop_toBottomOf="@+id/oprtr_id" />

    <TextView
            android:id="@+id/last_name_oprtr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Oliver"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.364"
            app:layout_constraintStart_toEndOf="@+id/oprtr_last_name"
            app:layout_constraintTop_toBottomOf="@+id/first_name_oprtr" />

    <TextView
            android:id="@+id/ph_no_oprtr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="+18333299238"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.383"
            app:layout_constraintStart_toEndOf="@+id/oprtr_ph_no"
            app:layout_constraintTop_toBottomOf="@+id/last_name_oprtr" />

    <TextView
            android:id="@+id/email_id_oprtr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="andyoliver@example.com"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/oprtr_email_id"
            app:layout_constraintTop_toBottomOf="@+id/ph_no_oprtr" />

    <TextView
            android:id="@+id/addrs_oprtr"
            android:layout_width="500px"
            android:layout_height="300dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="54 Cooper Street, Arlington, Texas, 76010"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.674"
            app:layout_constraintStart_toEndOf="@+id/oprtr_add"
            app:layout_constraintTop_toBottomOf="@+id/email_id_oprtr" />
</androidx.constraintlayout.widget.ConstraintLayout>